# Crypto.com Exchange API Credentials
CRYPTO_API_KEY=your_api_key_here
CRYPTO_API_SECRET=your_api_secret_here
CRYPTO_API_URL=https://api.crypto.com/v2/

# Google Sheets Configuration
GOOGLE_CREDENTIALS_FILE=credentials.json
GOOGLE_SHEET_NAME=your_sheet_name_here
GOOGLE_SHEET_ID=your_sheet_id_here

# TradingView Configuration
UPDATE_INTERVAL=900  # 15 minutes in seconds
TRADINGVIEW_INTERVAL=5sec  # Analysis interval (1m, 5m, 15m, 1h, 4h, 1d)
TRADINGVIEW_EXCHANGE=CRYPTO  # Crypto.com exchange for TradingView
TRADINGVIEW_SCREENER=CRYPTO  # Screener for cryptocurrency markets

# Trade Execution Settings
TRADE_CHECK_INTERVAL=5  # Check for new trades every 5 seconds
BATCH_SIZE=5  # Number of trades to process in each batch

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here  # Obtain from BotFather
TELEGRAM_CHAT_ID=your_chat_id_here  # Chat/channel ID to send messages to

# Trading Configuration
TRADE_AMOUNT=10  # Default amount in USDT per trade

# Logging Configuration
LOG_LEVEL=DEBUG  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL 